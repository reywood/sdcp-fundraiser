insert_final_newline = true

[*.{html,js,json,scss}]
indent_size = 4
trim_trailing_whitespace = true

[*.yml]
indent_size = 2
trim_trailing_whitespace = true

[package.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style=tab
